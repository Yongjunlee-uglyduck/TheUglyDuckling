<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper 
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.uglyduck.webapp.dao.MemberDao">

	<insert id="addMember" parameterType="com.uglyduck.webapp.dto.MemberDto">
		INSERT INTO 
			MEMBER
		VALUES (#{id}, #{pw}, #{name}, #{nickname}, #{email}, #{ip}, SYSDATE)
	</insert>
	
	<select id="idCheck" resultType="com.uglyduck.webapp.dto.MemberDto">
		select 
			*
		from
			member
		where
			ID = #{param1}
	</select>
</mapper>